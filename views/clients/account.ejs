<!-- Content Heading -->
<% if (title) { %>
    <h1 class="title"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<% if (message) { %>
    <p class="notice"><%= message %></p>
<% } %>

<% if (errors) { %>
    <% console.log(errors)%>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<% if (!locals.clientClearance) { %>
    <h1 class="title">Welcome <%= locals.clientData.client_firstname %></h1>
    <p class="title">You're logged in.</p>
<% } else if (locals.clientClearance) { %>
    <h2 class="title">Welcome <%= locals.clientData.client_firstname %></h2>
    <h3 class="title">Inventory Management</h3>
    <p class="title"><a href="/inv/">View management options</a></p>
<% } %>
