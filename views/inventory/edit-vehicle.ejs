<!-- Content Heading -->
<% if (title) { %>
    <h1 class="title"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<% if (message) { %>
    <p class="notice"><%= message %></p>
<% } %>

<% if (errors) { %>
    <% console.log(errors)%>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  


<div class="form-center">
  <form action="/inv/update" method="post">
    <label class="bold" for="classificationList">Classification</label>
    <%- classifications %>
    <label class="bold" for="invMake">Make</label>
    <input type="text" name="inv_make" id="invMake" minlength="3" required placeholder="Enter the vehicle's make" value="<%= locals.inv_make %>">
    <label class="bold" for="invModel">Model</label>
    <input type="text" name="inv_model" id="invModel" minlength="3" required placeholder="Enter the vehicle's model" value="<%= locals.inv_model %>"> 
    <label class="bold" for="invYear">Year</label>
    <input type="text" name="inv_year" id="invYear" minlength="4" pattern="[0-9]\d+" required placeholder="Enter the vehicle's year" value="<%= locals.inv_year %>">
    <label class="bold" for="invDesc">Description</label>
    <textarea minlength="20" name="inv_description" id="invDesc" required placeholder="Enter the vehicle's description"><%= locals.inv_description %></textarea>
    <label class="bold" for="invPrice">Price</label>
    <input minlength="2" type="text" name="inv_price" id="invPrice" pattern="[-+]?[0-9]*[.]?[0-9]+" required placeholder="Enter the vehicle's price" value="<%= locals.inv_price %>">
    <label class="bold" for="invMiles">Miles</label>
    <input minlength="1" type="text" name="inv_miles" id="invMiles" pattern="[-+]?[0-9]*[.]?[0-9]+" required placeholder="Enter the vehicle's miles" value="<%= locals.inv_miles %>">
    <label class="bold" for="invColor">Color</label>
    <input type="text" name="inv_color" id="invColor" minlength="3" required placeholder="Enter the vehicle's color" value="<%= locals.inv_color %>">
    <label class="bold" for="invImage">Image Path</label>
    <input type="text" name="inv_image" id="invImage" minlength="9" required value="<%= locals.inv_image %>">
    <label class="bold" for="invThumbnail">Thumbnail Image Path</label>
    <input type="text" name="inv_thumbnail" id="invThumbnail" minlength="9" required value="<%= locals.inv_thumbnail %>">
    <input type="submit" name="submit" value="Update Vehicle">
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>></form>


</div>