<!-- Content Heading -->
<% if (title) { %>
    <h1 class="title"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<% if (message) { %>
    <p class="notice"><%= message %></p>
<% } %>

<form action="#" method="post">
    <label class="bold" for="email">Username</label>
    <input type="email" name="client_email" id="email" required placeholder="Enter a valid email address">
    <label class="bold" for="password">Password</label>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <input type="password" name="client_password" id="password" required placeholder="Enter your password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <input type="submit" value="Login">
</form>
<p class="title">No Account? <a href="/clients/register">Sign-up</a></p>