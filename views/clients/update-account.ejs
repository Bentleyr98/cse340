<!-- Content Heading -->
<% if (title) { %>
    <h1 class="title"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<% if (message) { %>
    <p class="notice"><%= message %></p>
<% } %>

<% if (errors) { %>
    <% console.log(errors)%>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/client/update-info" method="post">
    <label class="bold" for="fname">First name</label>
    <input type="text" name="client_firstname" id="fname" required value="<%- locals.client_firstname %>">
    <label class="bold" for="lname">Last name</label>
    <input type="text" name="client_lastname" id="lname" required value="<%- locals.client_lastname %>">
    <label class="bold" for="email">Email address</label>
    <input type="email" name="client_email" id="email" required value="<%= locals.client_email %>">
    <input type="submit" value="Update">
    <input type="hidden" name="client_id"
    <% if(locals.client_id) { %> value="<%= locals.client_id %>"
      <% } %>>
</form>

<form action="/client/update-password" method="post">
    <h2>Update Password</h2>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.</span>
    <span>*note your original password will be changed.</span>
    <label  class="bold" for="password">Password</label>
    <input type="password" name="client_password" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required placeholder="Enter a valid password">
    <span class="italics">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <input type="submit" value="Change Password">
    <input type="hidden" name="client_id"
    <% if(locals.client_id) { %> value="<%= locals.client_id %>"
      <% } %>>
</form>




